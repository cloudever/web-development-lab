{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": 1,
    "no-return-assign": 0,
    "no-param-reassign": 1,
    "react/prefer-stateless-function": 0,
    "no-underscore-dangle": 0,
    "react/sort-comp": 0,
    "react/forbid-prop-types": [
      "object"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  }
}